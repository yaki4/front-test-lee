{
  "version": 2,
  "builds": [
      {
          "src": "nuxt.config.js",
          "use": "@nuxtjs/vercel-builder",
          "config": {
            "serverFiles": ["api/**", "static/**", "assets/**"]
          }
      }
  ],
  "build": {
    "env": {
        "API_URL": "https://test-leeroy.vercel.app/"
    }
  },
  "routes": [
      {  "src": "/api/(.*)", "dest": "api/index.js" },
      { "src": "/api", "dest": "api/index.js" },
      { "src": "/(.*)", "dest": "$1" }
  ]
}