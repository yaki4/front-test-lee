{
  "version": 2,
  "builds": [
      {
          "src": "nuxt.config.js",
          "use": "@nuxtjs/vercel-builder",
          "config": {
            "serverFiles": ["api/**", "static/**", "assets/**"]
          }
      }
  ],
  "routes": [
      { "src": "/api/(.*)", "dest": "api/index.js" },
      { "src": "/api", "dest": "api/index.js" },
      { "src": "/(.*)", "dest": "$1" }
  ],
  "rewrites": [
    {
      "source": "/api/:match*",
      "destination": "https://front-test-lee.vercel.app//:match*"
    }
  ]
}